<ul class="list-unstyled">
  <% @menus.each do |menu| %>
    <li>
      <a href="#"><%= menu.name %></a>
      <ul>
        <% menu.sub_menus.each do |sub_menu| %>
          <li>
            <a href="#submenu_<%= sub_menu.id %>"><%= sub_menu.name %></a>
          </li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>